FROM python:3.12-alpine

# ğŸŒ± Environment setup
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    VENV_PATH=/venv \
    PATH="/venv/bin:$PATH"

# ğŸ§° Install system dependencies & create Python venv
RUN apk update && apk add --no-cache \
    bash \
    git \
    ffmpeg \
    sqlite \
    python3-dev \
    build-base \
    libffi-dev \
    openssl-dev \
    musl-dev \
    && python3 -m venv $VENV_PATH

# ğŸ“¦ Install Python packages
COPY requirements.txt /tmp/requirements.txt
RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r /tmp/requirements.txt && \
    rm /tmp/requirements.txt

# ğŸ“ Copy entrypoint script into container
COPY docker/entrypoint.sh /studio/docker/entrypoint.sh

# ğŸ§¼ Make sure entrypoint is executable
RUN chmod +x /studio/docker/entrypoint.sh

# ğŸ“‚ Set working directory
WORKDIR /studio

# ğŸš€ Default command
ENTRYPOINT ["/studio/docker/entrypoint.sh"]
